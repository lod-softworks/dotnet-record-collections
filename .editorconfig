root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cs,csx}]
indent_style = space
indent_size = 4
tab_width = 4

# Keep imports tidy and consistent
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

# Prefer explicit, readable code (keep these as suggestions to avoid breaking builds)
csharp_style_var_for_built_in_types = false:suggestion
csharp_style_var_when_type_is_apparent = false:suggestion
csharp_style_var_elsewhere = false:suggestion

# Prefer braces for clarity, especially for non-trivial logic
csharp_prefer_braces = true:suggestion

# Use file-scoped namespaces when possible (modern C# style)
csharp_style_namespace_declarations = file_scoped:suggestion

